<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- Dao 에서 매퍼 설정에 필요한 엘리먼트 (설정) 호출할때 식별하기 위해서 -->
<mapper namespace="com.bitcamp.open.member.dao.LoginDao">
	<!--select 일때 사용하는 구문 ID:외부에서 해당 태그를 부를때 사용하는 식별이름 (중복되면 안됨 ) reusltType: 
		질의의 결과를 지정하는 클래스타입의 객체에 데이터 매핑 ParameterType : 여러 데이터를 하나의 객체에 담아서 받을때 해당 
		객체 타입으로 지정 -->


	<select id="selectById" resultType="com.bitcamp.open.member.Model.Member">
		SELECT * FROM MEMBER WHERE
		MEMBER_ID = #{ID}

	</select>

	<select id="selectList" resultType="com.bitcamp.open.member.Model.Member">
		select * from member

	</select>

	<!--insert 태그는 데이터베이스에 데이터를 삽입하는 insert 구문을 사용할 때 -->
	<!-- ID:외부에서 해당 태그를 부를때 사용하는 식별이름 (중복되면 안됨 ) ParameterType : 여러 데이터를 하나의 
		객체에 담아서 받을때 해당 객체 타입으로 지정 -->
	<insert id="insertMember" parameterType="com.bitcamp.open.member.Model.Member"
		useGeneratedKeys="true" keyProperty="idx">
		INSERT INTO MEMBER (MEMBER_ID,
		MEMBER_NAME, PASSWORD, PHOTO)
		VALUES(#{member_id} ,#{member_name}
		,#{password},#{photo})
	</insert>

	<select id="selectIdx" resultType="com.bitcamp.open.member.Model.Member">
		SELECT * FROM MEMBER WHERE
		idx=#{IDX}

	</select>

	<update id="updateIdx" parameterType="com.bitcamp.open.member.Model.Member">
		UPDATE member
		SET
		idx
		=#{idx},
		member_id = #{member_id},
		member_name = #{member_name},
		password = #{password},
		regdate = #{regdate},
		photo = #{photo}
		WHERE idx
		= #{idx}
	</update>
	
	<delete id="deleteIdx">
		DELETE FROM member
		WHERE idx = #{idx}
	</delete>



</mapper>